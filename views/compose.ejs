<%- include("partials/header"); -%>

  <div class="container" style="margin-top: 20px;">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <h1 style="padding-bottom: 1rem;">COMPOSE</h1>
    <form action="/compose" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle">
      
        <label  style="margin-top: 10px;">Authors name</label>
        <input class="form-control" type="text" name="authorsName">
        <label style="margin-top: 10px;">Post</label>
       
        <textarea class="form-control" name="postBody" rows="5" cols="20" ></textarea>
        <label style="margin-top: 10px;">Image</label>
        <!-- <input class="form-control" name="postImage" type="file"> -->
        <input type="file" class="form-control" 
        name="image" value="" required> 
      </div>
      <a href="/blog">
            <button  type="submit" class="btn btn-primary" style="margin-top: 10px;"  name="button">Publish</button>
          </a>
     </form> 

  <%- include("partials/footer"); -%>