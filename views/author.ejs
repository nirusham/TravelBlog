<%- include("partials/header"); -%>

<div class="container" style=" margin-top: 20px;">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <h2 style="padding-bottom: 1rem; position: relative; left: 30px;">Authors</h2>
    <form action="/author" method="post"></form>
  

    <% posts.forEach(function(post){ %>
      <h1><%= post.author %></h1>
      <h6><%= post.title %></h6>
      
      <!-- <p><%= post.content %></p>  -->
      <div>
        <img style="height: 200px; width: 30%;" style="width: 100%; height: 400px;" src="data:image/<%=post.image.contentType%>;base64, 
        <%=post.image.data.toString('base64')%>"> 
       </div>
      <% }) %>
    
      
      
  
  </div>

<%- include("partials/footer"); -%>
